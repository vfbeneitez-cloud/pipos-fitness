generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TrainingEnvironment {
  GYM
  HOME
  CALISTHENICS
  POOL
  MIXED
}

enum Sex {
  UNSPECIFIED
  MALE
  FEMALE
}

enum ActivityLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum CookingTime {
  MIN_10
  MIN_20
  MIN_40
  FLEXIBLE
}

enum PlanStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  profile       UserProfile?
  plans         WeeklyPlan[]
  trainingLogs  TrainingLog[]
  nutritionLogs NutritionLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model UserProfile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  displayName String?
  sex         Sex     @default(UNSPECIFIED)
  birthYear   Int?

  // Training
  goal           String?
  level          ActivityLevel       @default(BEGINNER)
  daysPerWeek    Int                 @default(3)
  sessionMinutes Int                 @default(45)
  environment    TrainingEnvironment @default(GYM)
  equipmentNotes String?
  injuryNotes    String?

  // Nutrition
  dietaryStyle String?
  allergies    String?
  dislikes     String?
  cookingTime  CookingTime @default(MIN_20)
  mealsPerDay  Int         @default(3)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Exercise {
  id             String              @id @default(cuid())
  slug           String              @unique
  name           String
  environment    TrainingEnvironment
  primaryMuscle  String?
  description    String?
  cues           String?
  commonMistakes String?
  regressions    String?
  progressions   String?

  media MediaAsset[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MediaAsset {
  id         String   @id @default(cuid())
  exerciseId String
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  type         String // "video" | "image"
  url          String
  thumbnailUrl String?
  source       String?

  createdAt DateTime @default(now())
}

model WeeklyPlan {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  weekStart DateTime
  status    PlanStatus @default(DRAFT)

  trainingJson  Json
  nutritionJson Json

  // ADD THESE:
  trainingLogs TrainingLog[]
  // (optional, but recommended symmetry)
  // nutritionLogs NutritionLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, weekStart])
}

model TrainingLog {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  occurredAt DateTime    @default(now())
  planId     String?
  plan       WeeklyPlan? @relation(fields: [planId], references: [id], onDelete: SetNull)

  sessionName String?
  completed   Boolean @default(true)
  difficulty  String?
  pain        Boolean @default(false)
  painNotes   String?
  detailsJson Json?

  createdAt DateTime @default(now())
}

model NutritionLog {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  occurredAt   DateTime @default(now())
  mealName     String?
  followedPlan Boolean  @default(true)
  hunger       String?
  notes        String?
  detailsJson  Json?

  createdAt DateTime @default(now())
}
